<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_in_message2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techin1.androidproject.activity.InMessage_JoinActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imuser"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/profileuser" />

                    <TextView
                        android:id="@+id/tvnamegroup"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/imuser"
                        android:text="NameGroup" />

                    <TextView
                        android:id="@+id/tvDatapost"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_below="@+id/tvnamegroup"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@+id/imuser"
                        android:text="Data" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rel1">

                    <TextView
                        android:id="@+id/tvstatus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:paddingTop="15dp"
                        android:text="STATUS STATUS STATUS" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/rel12"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/joinpost"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_join"
                        android:gravity="center"
                        android:text="เข้าร่วม"
                        android:textColor="@color/White"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDataJoin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/immessagr"
                        android:gravity="center"
                        android:text="เวลา" />

                </LinearLayout>

            </RelativeLayout>
        </FrameLayout>
    </ScrollView>
</RelativeLayout>
