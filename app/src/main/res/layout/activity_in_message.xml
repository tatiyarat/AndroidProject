<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_in_message2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techin1.androidproject.activity.InMessageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">

                    <ImageView
                        android:id="@+id/imuser"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/profileuser" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/imuser"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tvnamegroup"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="NameGroup" />

                        <TextView
                            android:id="@+id/tvDatapost"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Data" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rel1">

                    <TextView
                        android:id="@+id/tvstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:paddingTop="15dp"
                        android:text="STATUS STATUS STATUS" />

                    <ImageView
                        android:id="@+id/immessagr"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_below="@id/tvstatus"
                        android:layout_marginBottom="50dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="centerCrop" />

                </RelativeLayout>


            </RelativeLayout>
        </FrameLayout>
    </ScrollView>
</RelativeLayout>
