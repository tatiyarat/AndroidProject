<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_in_message2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techin1.androidproject.activity.InMessage_JoinActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imuser"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/profileuser" />

                <TextView
                    android:id="@+id/tvnamegroup"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/imuser"
                    android:text="NameGroup" />

                <TextView
                    android:id="@+id/tvDatapost"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/tvnamegroup"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/imuser"
                    android:text="Data" />

                <TextView
                    android:id="@+id/tvstatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/imuser"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingTop="15dp"
                    android:text="STATUS STATUS STATUS" />

                <ImageView
                    android:id="@+id/immessagr"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@id/tvstatus"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:id="@+id/tvDataJoin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/immessagr"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/joinpost"
                    android:gravity="center"
                    android:text="เวลา" />

                <ImageView
                    android:id="@+id/joinpost"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/immessagr"
                    android:layout_marginBottom="30dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/selector_join" />
            </RelativeLayout>
        </FrameLayout>
    </ScrollView>
</RelativeLayout>
